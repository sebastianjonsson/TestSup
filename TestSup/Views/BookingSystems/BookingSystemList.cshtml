@model IEnumerable<Logic.BookingSystem>

@{
    ViewBag.Title = "Boka";
}

<h2>Tryck på ett bokningssystem för att boka</h2>

@using (Html.BeginForm("SearchBookingSystem", "BookingSystems"))
{
    <p>
        @Html.TextBox("SearchString") <input type="submit" class="btn btn-primary" value="Sök efter verksamhetsnamn" />
    </p>
}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Picture)
        </th>
        <th>
            @Html.ActionLink("Verksamhet", "SortByName")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.ActionLink("Stad", "SortByCity")
        </th>
        <th>
            @Html.ActionLink("Kategori", "SortByCategory")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img height="48" width="48" src="@Url.Action("Image", new { id = item.Id })" onError="this.onerror=null;this.src='http://www.tabyglantan.se/files/user/grafik/profil.png'" />
            </td>
            <td>
                @Html.ActionLink(item.SystemName, "DetailsBookingSystem", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                <button type="button" onclick="location.href= '@Url.Action("EditBookingSystem", "BookingSystems", new { id = item.Id })'" class="btn btn-primary btn-sm"> Ändra bokningssystem </button> |
                <button type="button" onclick="location.href= '@Url.Action("DeleteBookingSystem", "BookingSystems", new { id = item.Id })'" class="btn btn-primary btn-sm"> Ta bort bokningssystem </button>
            </td>
        </tr>
    }
</table>
